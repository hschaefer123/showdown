<mvc:View controllerName="de.blogspot.openui5.showdown.controller.App" displayBlock="true" 
	xmlns:core="sap.ui.core"
	xmlns:sd="de.blogspot.openui5.showdown.control"
	xmlns:mvc="sap.ui.core.mvc"
	xmlns="sap.m">
	<App>
		<pages>
			<Page title="{ui>/pageTitle}" class="sapUiContentPadding">
				<content>
					<sd:Showdown src="{ui>/markdownSrc}" />
				</content>
			</Page>
		</pages>
	</App>
	<core:Fragment fragmentName="de.blogspot.openui5.showdown.view.GitHubRibbon" type="XML" />
</mvc:View>